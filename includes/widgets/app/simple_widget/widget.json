{
   "name": "SimpleWidget",
   "description": "A simple widget that displays time from a resource",

   "integration": {
      "technology": "angular",
      "type": "widget"
   },

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "required": [ "clock" ],
      "properties": {
         "clock": {
            "type": "object",
            "properties": {
               "required": [ "resource" ],
               "resource": {
                  "type": "string"
               }
            }
         }
      }
   }
}
